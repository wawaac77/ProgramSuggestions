<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_pink_title" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/color_pink</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text_grey_middle" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_grey_normal" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="progressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_drawable</item>
    </style>

</resources>